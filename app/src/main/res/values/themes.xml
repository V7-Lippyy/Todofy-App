<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Todofy" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash screen theme -->
    <style name="Theme.Todofy.Splash" parent="Theme.SplashScreen">
